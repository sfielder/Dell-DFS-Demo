    <validationRules>
        <fullName>Confirm_Password</fullName>
        <active>true</active>
        <errorConditionFormula>AND(  OR(  View_Password__c ,  Sign_Password__c  ) ,   NOT(  Password__c =  Confirm_Password__c ) )</errorConditionFormula>
        <errorDisplayField>Confirm_Password__c</errorDisplayField>
        <errorMessage>Confirm the password that you want the recipient to input.</errorMessage>
    </validationRules>
    <validationRules>
        <fullName>Enabled_Password_Set</fullName>
        <active>true</active>
        <errorConditionFormula>AND(  OR(  View_Password__c ,  Sign_Password__c  ) , OR( ISNULL( Password__c ), ISBLANK( TRIM( Password__c ) )  )  )</errorConditionFormula>
        <errorDisplayField>Password__c</errorDisplayField>
        <errorMessage>Enter a password that you want the recipient to input.</errorMessage>
    </validationRules>
    <validationRules>
        <fullName>Maximum_Expiration_Days</fullName>
        <active>true</active>
        <errorConditionFormula>Days_Until_Expiration__c &gt; 180</errorConditionFormula>
        <errorDisplayField>Days_Until_Expiration__c</errorDisplayField>
        <errorMessage>There is a maximum of 180 days before document expiration.</errorMessage>
    </validationRules>
    <validationRules>
        <fullName>Written_Without_Revisions</fullName>
        <active>true</active>
        <errorConditionFormula>TEXT(Signature_Type__c) = &apos;Written Signature&apos; &amp;&amp; Suggest_Revisions__c</errorConditionFormula>
        <errorDisplayField>Suggest_Revisions__c</errorDisplayField>
        <errorMessage>Suggesting revisions is not possible with a written signature.</errorMessage>
    </validationRules>
